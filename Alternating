# Amaç: Açagdaki sekilde string degistiren fonksiyon yazmak istiyoruz.
# before: "hi my name is john and i am learning python"
# after: "Hi mY NaMe iS JoHn aNd i aM LeArNiNg pYtHoN"
        

'''cumle="hi my name is john and i am learning python"'''


def second_letter_capital(cumle):
    Yeni_cumle=""
    for j in range(0,len(cumle)):
        if j%2==0:
            Yeni_cumle = Yeni_cumle+(cumle[j].upper())
        else:
            Yeni_cumle = Yeni_cumle+cumle[j].lower()
    print(Yeni_cumle)


second_letter_capital("hi my name is john and i am learning python")


#Vahit beyin Yorumu

def alternating (string) :
    new_string = ""
    for string_index in range(len(string)):
        if string_index % 2 == 0:
            new_string += string[string_index]. upper()
    else:
        new_string += string[string_index]. lower()
    print(new_string)
